<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:Vegan_Shop"
             x:Class="Vegan_Shop.MainPage">
    <StackLayout>
        <SearchBar x:Name = "TopSearchBar"
            Placeholder="Search Here"
            SearchCommand = "{Binding OnSearch}"
            SearchCommandParameter="{Binding Text, Source={x:Reference TopSearchBar}}"/>
        <Button Text="Click Me!"
                Clicked="OnPress"/>
        <Label x:Name = "MidLabel"
           Text="{Binding TextBox}" 
           HorizontalOptions="Center"
           VerticalOptions="CenterAndExpand" />
    </StackLayout>
</ContentPage>
